{
  "name": "dgit-ui",
  "version": "1.0.0-beta",
  "description": "DGit GUI - Design File Version Control",
  "main": "main.js",
  "scripts": {
    "start": "npx electron .",
    "dev": "npx electron . --dev",
    "build": "electron-builder",
    "build-zip": "electron-builder --mac zip",
    "postbuild": "xattr -cr dist/mac/DGit.app || true",
    "pack": "electron-builder --dir",
    "clean": "rm -rf dist node_modules package-lock.json",
    "reinstall": "npm run clean && npm install"
  },
  "bin": {
    "dgit-gui": "./bin/dgit-gui.js"
  },
  "keywords": ["dgit", "design", "version-control", "gui", "electron"],
  "author": "3pxTeam",
  "license": "MIT",
  "devDependencies": {
    "electron": "^30.5.1",
    "electron-builder": "^24.0.0"
  },
  "build": {
    "appId": "com.3pxteam.dgit-gui",
    "productName": "DGit",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "assets/**/*"
    ],
    "extraResources": [
      {
        "from": "../dgit/dgit",
        "to": "dgit",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "identity": null,
      "gatekeeperAssess": false,
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.icns",
      "target": [
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ]
    }
  }
}